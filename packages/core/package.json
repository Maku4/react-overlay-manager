{
  "name": "@react-overlay-manager/core",
  "version": "0.1.1",
  "private": false,
  "type": "module",
  "description": "A lightweight React overlay management library with full TypeScript support",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "type-check": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:types": "tsd"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tsd": "^0.33.0"
  },
  "dependencies": {
    "immer": "^10.1.1"
  },
  "keywords": [
    "react",
    "overlay",
    "modal",
    "popup",
    "manager",
    "typescript",
    "type-safe"
  ],
  "author": "Mateusz Kuplowski",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Maku4/react-overlay-manager.git",
    "directory": "packages/core"
  },
  "homepage": "https://github.com/Maku4/react-overlay-manager#readme",
  "bugs": {
    "url": "https://github.com/Maku4/react-overlay-manager/issues"
  },
  "publishConfig": {
    "access": "public"
  }
}
